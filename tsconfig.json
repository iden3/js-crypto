{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declarationDir": "dist/types",
    "outDir": "dist/cjs",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src"]
}

