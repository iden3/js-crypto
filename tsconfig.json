{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es6",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/node/cjs",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "types"
  ]
}
